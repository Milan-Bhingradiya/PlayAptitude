{
  "compilerOptions": {
    "target": "ES6", // or any version you are targeting
    "module": "commonjs", // for Node.js
    "outDir": "./dist", // output directory for compiled files
    "rootDir": "./src", // root directory of your source files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"], // include all TypeScript files in src
  "exclude": ["node_modules"] // exclude node_modules
}
